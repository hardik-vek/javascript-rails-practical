<%= form_with(model: @user,local: false) do |form| %>
  <div class="form">
    <%= form.label :first_name %></br>
    <%= form.text_field :first_name %>
    <% @user.errors.full_messages_for(:first_name).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div class="form">
    <%= form.label :last_name %></br>
    <%= form.text_field :last_name %>
    <% @user.errors.full_messages_for(:last_name).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div class="form">
    <%= form.label :email %></br>
    <%= form.email_field :email %>
    <% @user.errors.full_messages_for(:email).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div class="form", id='password_input'>
    <%= form.label :password %></br>
    <%= form.password_field :password %>
    <% @user.errors.full_messages_for(:password).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div class="form">
    <%= form.label :subcription %></br>
    <%= form.check_box :subcription %>
    <% @user.errors.full_messages_for(:subcription).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <%# if subcription.checked? %>
    <div class="form">
      <%= form.label :subscription_email %></br>
      <%= form.email_field :subscription_email %>
      <% @user.errors.full_messages_for(:subscription_email).each do |msg| %>
        <div><%= msg %></div>
      <% end %>
    </div>
  <%# end %>
  <div><%= form.submit %></div>
<% end %>
